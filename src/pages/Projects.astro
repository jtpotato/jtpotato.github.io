---
const projectShowcase = [
  "jtpotato/firetrace",
  "jtpotato/robocup-soccer-2024",
  "jtpotato/simc-2024",
];

const projectJsons = await Promise.all(
  projectShowcase.map(async (projectName) => {
    const response = await fetch(`https://api.github.com/repos/${projectName}`);
    console.log(response.status);
    const json = await response.json();
    return json;
  })
);

// console.log(projectJsons);
---

<h2 class="text-4xl font-bold">Projects</h2>
<br />
<div class="flex flex-col gap-4">
  {
    projectJsons.map((project) => {
      return (
        <a href={`https://github.com/${project.full_name}`} target="_blank">
          <p class="font-bold text-xl">{project.full_name}</p>
          <p class="text-neutral-500">
            {project.language} &#x2022;{" "}
            {project.description ? project.description : "No Description Yet"}
          </p>
        </a>
      );
    })
  }
</div>
